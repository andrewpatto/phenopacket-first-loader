{
  "name": "@elsa-data/pfdl",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/pfdl-lib.d.ts",
      "import": "./dist/pfdl-lib.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "pfdl": "./dist/pfdl-cli.js"
  },
  "tsup": {
    "entry": {
      "pfdl-cli": "src/pfdl-cli.ts",
      "pfdl-lib": "lib/pfdl.ts"
    },
    "format": [
      "esm"
    ],
    "bundle": true,
    "dts": true,
    "target": "node18",
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  },
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": ">= 8.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "test": "jest"
  },
  "dependencies": {
    "commander": "12.0.0",
    "lodash": "4.17.21",
    "protobufjs": "7.2.6",
    "tsx": "4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "18.19.26",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsup": "8.0.2",
    "typescript": "5.4.2"
  }
}
